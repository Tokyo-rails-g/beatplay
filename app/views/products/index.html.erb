	<!-- main-visual -->
	<!-- 検索フォーム -->
		<%= render 'products/list', q: @q %>
	<!--             -->

	<div class="main-box">
		<div class="sort-box">
			<p>ここに並び順変えるセレクターが入ります。上下左右中央揃え。</p>
			<table>
			  <thead>
			    <tr>
			      <th><%= sort_link(@q, :album_title) %></th>
			      <th><%= sort_link(@q, :artist) %></th>
			    </tr>
			  </thead>
			  <tbody>
			  </tbody>
			</table>
		</div>
		<%= paginate @searchproducts %>
		<!-- 並び順 -->
		<div class= "products-box">


			<% if @searchproducts.any? %>
				<% if @searchproducts2.count != @productall.count %>
				<%= @searchproducts2.count %>件ヒットしました。
				<% end %>

				<!-- each -->
				<% @searchproducts.each do |searchproduct| %>
				<div class="products">
					<%= link_to product_path(searchproduct) do %>
					<p class="products-img">img</p>
					<% end %>
					<p class="products-info">
						アルバム名：<%= searchproduct.album_title %><br>
						アーティスト名：<%= searchproduct.artist %><br>
						レーベル：<%= searchproduct.label %><br>
						ジャンル：<%= searchproduct.category.name %><br>
						リリース年：<%= searchproduct.release_year %><br>
						価格：<%= searchproduct.price %>
					</p>
				</div>
				<% end %>
				<!-- each end -->

			<% else %>
  				<p><%= @msg %></p>
			<% end %>

		</div>

		<%= paginate @searchproducts %>
	</div>


	<!-- 	ページング　　 -->
</main>
