	<div class="main-visual">
	<form class="top-search-form" action="/" name="search" method="get">
		<dl class="search">
		    <dt><input type="text" name="search" value="" placeholder="キーワードで検索。これだとダサい" /></dt>
		    <dd><button><span></span></button></dd>
		</dl>
	</form>
		<!-- 検索ransack導入 -->
		    <%= search_form_for @q do |f| %>

			  <%= f.label :album_title_or_artist_or_label_or_discs_musics_name_cont_any, "検索"%>

			  <p class="search-box-style"><%= f.search_field :album_title_or_artist_or_label_or_discs_musics_name_cont_any %><br></p>

			  <%= f.label :discs_musics_bpm, "範囲指定" %>
			    <%= f.number_field :discs_musics_bpm_gteq_any, min: 10, max: 1000, step: 10 %>以上 ~
			    <%= f.number_field :discs_musics_bpm_lteq_any, min: 10, max: 1000, step: 10 %>以下
			  <%= f.submit "Search"%>

			<% end %>
			<!--  -->
		<!-- 検索フォーム -->
	</div>
	<div class="main-box">
		<div class="sort-box">
			<table>
			  <thead>
			    <tr>
			      <th><%= sort_link(@q, :album_title) %></th>
			      <th><%= sort_link(@q, :artist) %></th>
			    </tr>
			  </thead>
			  <tbody>
			  </tbody>
			</table>
		</div>
		<%= paginate @searchproducts %>
		<!-- 並び順 -->
		<div class= "products-box">


			<% if @searchproducts.any? %>
				<% if @searchproducts2 != @productall %>
				<%= @searchproducts2.count %>件ヒットしました。
				<% end %>

				<!-- each -->
				<% @searchproducts.each do |searchproduct| %>
				<div class="products">
					<%= link_to product_path(searchproduct) do %>
						<p class="products-img"><%= attachment_image_tag searchproduct, :image, :fill, 200, 200, fallback: 'icon-mypage.jpg', :size => "200x200" %></p>
					<% end %>
					<p class="products-info">
						<%= searchproduct.album_title %><br>
						<%= searchproduct.artist %><br>
						<%= searchproduct.label %><br>
						<%= searchproduct.category.name %><br>
						リリース年：<%= searchproduct.release_year %><br>
						価格：<%= searchproduct.price %>
					</p>
				</div>
				<% end %>
				<!-- each end -->

			<% else %>
  				<p><%= @msg %></p>
			<% end %>

		</div>

		<%= paginate @searchproducts %>
	</div>


	<!-- 	ページング　　 -->
</main>
