<h1>MY PAGE</h1>
<div class="container">

    <div class="form-group">
      <label class="col-sm-2 control-label">名前：</label>
      <div class="col-sm-10">
        <%= @user.last_name %><%= @user.first_name %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <label class="col-sm-2 control-label">登録住所：</label>
        <div class="col-sm-10">
          <%= @user.postal_code %>
          <%= '@user.pref' + @user.city %>
          <%= @user.address1 + @user.address2 %>
        </div>
      </div>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <label class="col-sm-2 control-label">電話番号：</label>
        <div class="col-sm-10">
          <%= @user.phone_number %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <label class="col-sm-2 control-label">メール：</label>
        <div class="col-sm-10">
          <%= @user.email %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to "edit", edit_user_path(@user.id), class:"btn btn-success" %>
      </div>
    </div>
  </form>

  <div>
    <label>お気に入り一覧</label><br>
    <% @favorites.each do |favorite| %>
      <label>アルバム/シングル名</label>
      <%= favorite.product.album_title %><br>

      <label>アーティスト名</label>
      <%= favorite.product.artist %><br>

      <div>
       <%= link_to "お気に入りにから削除する", product_favorites_path(favorite.product_id), method: :delete, class: "btn-sm btn-danger" %>
      </div>

    <% end %>
  </div>







  <div class="col-12">
    	<table class="table">
          <thead>
            <tr>
              <th>購入日</th>
              <th>ステータス</th>
              <th>合計金額</th>
            </tr>
          </thead>
          <tbody>
            <% @user.orders.each do |order| %>
              <tr><%= order.created_at %></tr>
              <tr><%= order.status %></tr>
              <tr><%= order.total %></tr>
          </tbody>
        </table>
    </div>
              <br><div>

                <% order.order_items.each_with_index do |order_item| %>
                  <%= attachment_image_tag order_item.product, :image, :fill, 100, 100, fallback: 'icon-mypage.jpg', :size => "100x100" %><br>
                  <label>タイトル</label><%= order_item.product.album_title %><br>
                  <label>アーティスト</label><%= order_item.product.artist %><br>
                  <label><%= order_item.quantity %>枚</label>
                  <label>¥<%= order_item.price %> </label>
                <% end %>
              </div>

              <label> 問い合わせ </label>
            <% end %>
</div>
