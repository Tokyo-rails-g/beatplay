
<section class="view-edit-box">

	<div class="mail-icon">
	    <div class="">
	    	<i class="fa fa-sign-in"></i>
	    </div>
		<p class="page-title">パスワードの変更</p><br>
	</div>

	<div class="main-box">

		<div class="field row">
		    <label>現在のパスワード</label>
		    <%= @user.encrypted_password %>
		</div>

		<%= form_for(@user) do |f| %>


			<div class="field row">
			    <label>新しいパスワード</label>
			    <%= f.text_field :encrypted_password, class: "user_password col-xs6" %>
			</div>

			<div class="field row">
			    <label>新しいパスワードの再入力</label>
			    <%= f.text_field :encrypted_password, class: "user_password col-xs6" %>
			</div>

			<div class="actions">
				<%= f.submit "変更内容を保存" %>
			</div>

		<% end %>

		<div class="row">
	        <%= link_to edit_user_path(@user.id), class: " col-xs-3 btn btn-default glyphicon glyphicon-wrench" do %> 戻る
	        <% end %>
	    </div>
	</div>
</section>
