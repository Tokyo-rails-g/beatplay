<head>
	<title>購入決定後</title>
</head>
<!-- headerの部分テンプレート -->
<%= render 'layouts/user_header' %>
<section>
	<div class="main-box user-inverse">
			<div class="thanks-icon">
				<%= image_tag 'thanks-logo.png', :size => "200x200"%>
				<!-- <img src="assets/thanks-logo.png" alt=""> -->
				<div><font size="10">Thank you！</font></div>
			</div>
		<div class="message-box">
			<div class="tanks">
				<font size="5">ご注文が確定されました。<br>ありがとうございました。</font>
			</div>
			<div class="order-info">
				<font size="4"><p class="order-number">注文番号：#<%= @order.id %>-<%= @order.created_at.strftime('%Y%m%d') %></p></font>
				<p class="order-list"></p>
			</div>
		</div>
		<div class="buttons">
			<%= link_to products_path do %>
            	<p class="btn btn-default header-buttons">買い物を続ける</p>
            <% end %>
		</div>
	</div>
</section>