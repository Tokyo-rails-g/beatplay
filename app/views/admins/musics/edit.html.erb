<div class="new-product">
  <h1>曲情報追加</h1>

    <div class="container">

        <%= form_for @disc, url: edit_admins_product_disc_musics_path(@disc.id) do |f| %>

          <%= f.nested_fields_for :musics, wrapper_tag: :div do |music| %>

        <div class="form-group2">
              <%= music.text_field :track_number, placeholder:"曲順", class: 'form-inline', :size => "20" %>
              <%= music.text_field :name, placeholder:"曲名", class: 'form-inline', :size => "50" %>
              <%= music.text_field :bpm, placeholder:"BPM", class: 'form-inline', :size => "20" %>
              <%= music.text_field :duration, placeholder:"曲長", class: 'form-inline', :size => "20" %>
          <% end %>
        </div>

          <%= f.add_nested_fields_link :musics, 'Add new', class: 'btn btn-primary', role: 'button' %>

        <div class="action">
            <div class="submit"><%= f.submit '登録', class:"btn btn-default ml10" %></div>
        </div>

          <% end %>
    </div>
</div>