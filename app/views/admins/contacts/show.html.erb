<%= render 'admins/users/header'  %>

<div class="contact-show-box">
	<div class="contact-head-info">
		<table class="table table-striped table-hover">
			<thead>
				<!-- データ引っ張ってこれたらth要素をsort_linkの記述に書き換えると早いかも -->
				<tr>
					<th>注文ID</th>
					<th>問い合わせ日</th>
					<th>ユーザーID</th>
					<th>配送状況</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= @contact.id %></td>
					<td><%= @contact.created_at.strftime('%Y年 %m月　%d日') %></td>
					<td><%= @contact.order.id %></td>
					<td><%= @contact.order.status %></td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="contact-body-box">
		<p class="border-bottom">問い合わせ内容</p>
		<%= @contact.body %>
	</div>
	<div class="respons-form">
		<p class="border-bottom">回答フォーム</p>
	<%= form_for(@comment) do |f| %>
		<%= f.text_area :body, :maxlength=>"200", :class => "form-control", :placeholder => "最大２００文字まで入力できます", :size => "50x10" %>
	</div>
	<div class="contact-submit-button">
		<%= f.submit "回答を送信", class: "btn btn-default", data:{ confirm: "回答を送信してよろしいですか？" } %>
	</div>
	<% end %>
</div>