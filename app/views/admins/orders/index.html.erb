<%= render 'admins/users/header'  %>

<h1>注文一覧</h1>


<%= search_form_for @q, url:admins_orders_index_path, method: :get do |f| %>
  <%= f.search_field :id_eq %>
  <%= f.submit "ID検索"%>
<% end %>

<div class="container">
  <div class="col-7">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
            <th></th>
            <th><%= sort_link(@q, :id, "オーダーNo.") %></th>
            <th><%= sort_link(@q, :status, "ステータス") %></th>
            <th><%= sort_link(@q, :created_at, "購入日") %></th>
            <th><%= sort_link(@q, :user_id, "ユーザー名") %></th>
            <th><%= sort_link(@q, :total, "合計") %></th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
            <th><input type="checkbox"></th>
            <td><%= link_to order.id, admins_order_show_path(order.id) %></td>
            <td><button type="button" class="btn btn-default btn-sm"><%= order.status %></button></td>
            <td><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <td><%#= link_to order.user_id.first_name + order.user_id.last_name, admins_user_path(order.user), method: :get %></td>
            <td><%= order.total %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @orders %>
  </div>
</div>

