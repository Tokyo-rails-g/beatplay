<%= render 'admins/users/header'  %>
<div class="counter-box">
	<div class="counter">
		<p>登録ユーザー合計: <%= @u_counter %> 人 </p>
		<p>総オーダー数: <%= @o_counter %> 件 </p>
		<p>商品ラインナップ: <%= @p_counter %> 点 </p>
	</div>
</div>

<div class="dashboard-main-box">
	<div class="dashboard-contents-box">
		<div class="dashboard-orders-box">
			<p class="dashboard-sub">直近１０件の注文</p>
				<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>ステータス</th>
								<th>オーダーNo.</th>
								<th>購入確定日</th>
							</tr>
						</thead>
						<tbody>
							<!-- each start -->
							<% @orders2.reverse.each do |order| %>
								<tr>
									<td><%= order.status %></td>
									<td><%= order.id %></td>
									<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
								</tr>
							<% end %>
							<!-- each end -->
						</tbody>
				</table>
				 <p align="center"><%= @msg %></p>
		</div>
		<div class="dashboard-users-box">
			<p class="dashboard-sub">直近１０件の登録者</p>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>ユーザーID</th>
						<th>Email</th>
						<th>登録日</th>
					</tr>
				</thead>
				<tbody>
					<!-- each start -->
				<% @users2.reverse_each do |user| %>
					<tr>
						<td><%= user.id %></td>
						<td>
							<%= link_to admins_user_path(user) do %>
								<%= user.email %>
							<% end %>
						</td>
						<td><%= user.created_at.strftime('%Y/%m/%d') %></td>
					</tr>
				<% end %>
					<!-- each end -->
				</tbody>
			</table>
			<p align="center"><%= @msg2 %></p>
		</div>
		</div>
	</div>
</div>