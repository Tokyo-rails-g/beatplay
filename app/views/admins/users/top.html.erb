<%= render 'admins/users/header'  %>
<div class="counter-box">
	<ul class="ad-counter">
		<li>登録ユーザー合計: <b><%= @u_counter %></b> 人 </li>
		<li>総オーダー数: <b><%= @o_counter %></b> 件 </li>
		<li>商品ラインナップ: <b><%= @p_counter %></b> 点 </li>
	</ul>
</div>

<div class="dashboard-main-box">
		<div class="dashboard-box">
			<p class="dashboard-sub">最新の注文</p>
				<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>購入確定日</th>
								<th>オーダーNo.</th>
								<th>ステータス</th>
							</tr>
						</thead>
						<tbody>
							<!-- each start -->
							<% @orders2.reverse.each do |order| %>
								<tr>
									<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
									<td>#<%= order.id %>-<%= order.created_at.strftime('%Y%m%d') %></td>
									<td><%= order.status %></td>
								</tr>
							<% end %>
							<!-- each end -->
						</tbody>
				</table>
				 <p align="center"><%= @msg %></p>
		</div>
		<div class="dashboard-box">
			<p class="dashboard-sub">最新の登録ユーザー</p>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>ユーザーID</th>
						<th>Email</th>
						<th>登録日</th>
					</tr>
				</thead>
				<tbody>
					<!-- each start -->
				<% @users2.reverse_each do |user| %>
					<tr>
						<td><%= user.id %></td>
						<td>
							<%= link_to admins_user_path(user) do %>
								<%= user.email %>
							<% end %>
						</td>
						<td><%= user.created_at.strftime('%Y/%m/%d') %></td>
					</tr>
				<% end %>
					<!-- each end -->
				</tbody>
			</table>
			<p align="center"><%= @msg2 %></p>
		</div>
		</div>
</div>