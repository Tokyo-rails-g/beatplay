<%= render 'admins/users/header'  %>

<h1>ユーザー詳細</h1>
<div class="container">

  <div class="form-horizontal">

    <div class="form-group">
        <p class="form-control-static">
          名前：<%= @user.first_name %><%= @user.last_name %>
        </p>
    </div>
    <div class="form-group">
          <p class="form-control-static">
            登録住所：<%= @user.postal_code %>
            <%= @user.prefecture %> <%= @user.city %>
          </p>
          <p class="form-control-static">
            <%= @user.address1 %> <%= @user.address2 %>
          </p>

      </div>
    <div class="form-group">
          <p class="form-control-static">
            電話番号：<%= @user.phone_number %>
          </p>
    </div>
    <div class="form-group">
          <p class="form-control-static">
            メール：<%= @user.email %>
          </p>
    </div>
    <div class="form-group">
        <%= button_to "edit", admins_edit_user_path(@user.id), class:"btn btn-success" %> <%= button_to "Destroy", admins_users_path(@user.id), method: :delete, class:"btn btn-danger", data: { confirm: 'Are you sure?' }%>
    </div>
  </div>

  <div class="orders-index">
      <table class="table">
        <% @orders.each do |order| %>
          <thead>
            <tr>
              <th><input type="checkbox"></th>
              <th>オーダーNo.</th>
              <th>ステータス</th>
              <th>購入日</th>
              <th>合計</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th><%= link_to "order.id", admins_order_show_path(order.id) %></th>
              <td><%= order.status %></td>
              <td><%= order.created_at %></td>
              <td><%= order.total %></td>
        <% end %>
            </tr>
          </tbody>
      </table>
  </div>

</div>