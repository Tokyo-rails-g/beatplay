<%= render 'admins/users/header'  %>

<h1>ユーザー詳細</h1>
<div class="container">

  <div class="form-horizontal">

    <div class="form-group">
      <label class="col-sm-4 control-label">名前：</label>
      <div class="col-sm-8">
        <p class="form-control-static">
          <%= @user.first_name %><%= @user.last_name %>
        </p>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-4 control-label">
        <label class="control-label">登録住所：</label>
        <div class="col-sm-8">
          <p class="form-control-static">
            <%= @user.postal_code %> <%= @user.prefecture %> <%= @user.city %>
          </p>
          <p class="form-control-static">
            <%= @user.address1 %> <%= @user.address2 %>
          </p>
        </div>
      </div>
    <div class="form-group">
        <label class="col-sm-4 control-label">電話番号：</label>
        <div class="col-sm-8">
          <p class="form-control-static">
            <%= @user.phone_number %>
          </p>
        </div>
      </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label">メール：</label>
        <div class="col-sm-8">
          <p class="form-control-static">
            <%= @user.email %>
          </p>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class=" col-sm-12">
        <%= button_to "edit", edit_admins_user_path(@user.id), class:"btn btn-success" %>
        <%= button_to "Destroy", admins_users_path(@user.id), method: :delete, class:"btn btn-danger", data: { confirm: 'Are you sure?' }%>
      </div>
    </div>
  </form>

  <div class="col-12">
      <table class="table">
          <thead>
            <tr>
              <th><input type="checkbox"></th>
              <th>オーダーNo.</th>
              <th>ステータス</th>
              <th>購入日</th>
              <th>合計</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th><input type="checkbox"></th>
                <% @orders.each do |order| %>
              <th><%= link_to "order.id", order.order_id %></th>
              <td><%= link_to "order.status", order.status %></td>
              <td><%= link_to "order.created_at", order.created_at %></td>
              <td><%= link_to "order.total", order.total %></td>
                <% end %>
            </tr>
          </tbody>
        </table>
    </div>

</div>