<%= render 'admins/users/header'  %>


<div class="container">
  <div class="col-7">
    <table class="table">
      <thead>
        <tr>
            <th><input type="checkbox"></th>
            <th>ID</th>
            <th>ユーザー名</th>
            <th>Email</th>
            <th>登録日</th>
        </tr>
      </thead>
      <tbody>
        <tr>
            <th><input type="checkbox"></th>
              <% @users.each do |user| %>
            <th><%= user.id %></th>
            <td><%= user.first_name %><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at %></td>
            <td><%= button_to "view", admins_users_show_path, method: :get, class:"btn btn-success" %></td>
            <td>
              <%= button_to "edit", admins_users_edit_path, method: :get, class:"btn btn-success" %>
            </td>
            <td>
              <%= button_to "Destroy", admins_users_destroy_path, method: :delete, class:"btn btn-danger", data: { confirm: 'Are you sure?' }%>
            </td>
              <% end %>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="col-5">
    <table class="table">
      <h3>登録管理者情報</h3>
      <thead>
        <tr>
            <th>名前</th>
            <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @admins.each do |ad| %>
            <td><%= ad.name %></td>
            <td><%= ad.email %></td>
            <td>
              <%= button_to "edit", edit_admin_registration_path, method: :get, class:"btn btn-success" %>
            </td>
            <td>
              <%= button_to "Destroy", admin_registration_path, method: :delete, class:"btn btn-danger", data: { confirm: 'Are you sure?' }%>
            </td>
        </tr>
      </tbody>
              <%= ad.submit 'add', class:"btn btn-primary" %>
          <% end %>
    </table>
  </div>
</div>


