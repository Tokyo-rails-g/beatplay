<main>
	<h1>新規商品追加</h1>
	<div class="new-product">
    <div class="container">
      <form class="form-horizontal">
        <div class="form-group">
      <%= form_for [:admins, @product] do |f| %>
        <div class="field">
          <label for="artist1", class="col-sm-2 control-label">アーティスト名</label>
          <div class="artist", class="col-sm-4"><%= f.text_field :artist %></div>
          <button type="button" class="btn check_btn ml10" value="" name="">
            チェック
          </button>
        </div>

        <div class="field">
          <label for="album_title1", class="col-sm-2 control-label">シングル/アルバム名</label>
          <div class="album_title", class="col-sm-4"><%= f.text_field :album_title %></div>
        </div>

        <div class="field">
          <label for="price1", class="col-sm-2 control-label">値段</label>
          <div class="price", class="col-sm-3"><%= f.text_field :price %></div>
        </div>

        <div class="field">
          <label for="category1", class="col-sm-2 control-label">ジャンル</label>
          <div class="category", class="col-sm-3"><%= f.text_field :category_id %></div>
        </div>

        <div class="field">
          <label for="label1", class="col-sm-2 control-label">レーベル名</label>
          <div class="label", class="col-sm-3"><%= f.text_field :label %></div>
        </div>

        <div class="field">
          <label for="release_year1", class="col-sm-2 control-label">リリース年</label>
          <div class="release_year", class="col-sm-3"><%= f.text_field :release_year %></div>
        </div>

        <button type="button" class="btn bg-white mt10 miw100 add_btn" value="" name="">入力欄追加</button>
        <div class="parent">

        <div class="field">
          <label for="disc1", class="col-sm-2 control-label">ディスク</label>
          <div class="disc", class="col-sm-2">
            <%= f.fields_for :admins,@products do |disc_number| %>
              <%= disc_number.text_field :post %>
            <% end %>
          </div>
          <label for="track1", class="col-sm-2 control-label">曲順</label>
          <div class="track", class="col-sm-2">
            <%= f.fields_for :admins,@products  do |track_number|%>
              <%= track_number.text_field :post %>
            <% end %>
          </div>
          <label for="track_name1", class="col-sm-2 control-label">曲名</label>
          <div class="track_name", class="col-sm-4">
            <%= f.fields_for :admins,@products do |track_name| %>
              <%= track_name.text_field :post %>
            <% end %>
          </div>
          <label for="bpm1", class="col-sm-2 control-label">BPM</label>
          <div class="bpm", class="col-sm-2">
            <%= f.fields_for :admins,@products do |bpm| %>
              <%= bpm.text_field :post %>
            <% end %>
          </div>
          <label for="duration1", class="col-sm-2 control-label">曲長</label>
          <div class="duration", class="col-sm-2">
            <%= f.fields_for :admins,@products do |duration| %>
              <%= duration.text_field :post %>
            <% end %>
          </div>
          <button type="button" class="btn trash_btn ml10" value="" name="">削除</button>
        </div>

        <div class="field">
          <label for="stock1">在庫数</label>
          <div class="stock"><%= f.text_field :stock %></div>
        </div>

        <div class="action">
          <div class="submit"><%= f.submit '登録', class:"btn btn-primary col-xs-12" %></div>
        </div>

      <% end %>
  </div>
</main>