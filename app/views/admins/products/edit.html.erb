<%= render 'admins/users/header'  %>

<div class="ad-box">
  <div class="ad-index-box">
    <div class="ad-index-inner">
      <div class="ad-tbl-title">商品情報編集</div>
      <div class="new-product-form">

      <%= form_for(@product, url: update_product_path) do |f| %>

        <div class="form-group">
          <%= f.label :artist, "アーティスト名：" %>
          <%= f.text_field :artist, :size => "50" %>
        </div>

        <div class="form-group">
            <%= f.label :album_title, "シングル/アルバム名：" %>
            <%= f.text_field :album_title, :size => "50" %>
        </div>

        <div class="form-group">
            <%= f.label :image_id, "ジャケット画像：" %>
            <%= f.attachment_field :image %>
        </div>

        <div class="form-group">
            <%= f.label :price, "値段：" %>
            <%= f.text_field :price, :size => "20" %>
        </div>

        <div class="form-group">
            <%= f.label :category_id, "カテゴリー：" %>
            <%= f.select(:category_id,[['Rock',1],
                                    ['Jpop',2],
                                    ['Hardrock/Metal',3],
                                    ['Pops',4],
                                    ['HipHop/R&B',5],
                                    ['Dance/Electronic',6],
                                    ['Jazz',7],
                                    ['World',8],
                                    ['Classical',9],
                                    ['Anime/Game/Soundtrack',10],
                                    ['Idol',11]]) %>
        </div>

        <div class="form-group">
            <%= f.label :label, "レーベル名：" %>
            <%= f.text_field :label, :size => "20" %>
        </div>

        <div class="form-group">
            <%= f.label :release_year, "リリース年：" %>
            <%= f.text_field :release_year, :size => "20" %>
        </div>

        <div class="form-group">
            <%= f.label :stock, "在庫数：" %>
            <%= f.text_field :stock, :size => "20" %>
        </div>

        <div class="discs">
          <%= f.fields_for :discs do |disc| %>
            <%= render 'disc_fields', f: disc %>
          <% end %>
          <div id="links">
            <%= link_to_add_association 'ディスクを追加', f, :discs %>
          </div>
          <%= f.submit %>
        </div>

      <% end %>
      </div>

    </div>
  </div>
</div>