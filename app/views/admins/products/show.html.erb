<%= render 'admins/users/header'  %>


<div class="admin-product-show">
	<div class="header-title">
		<h1><%= @product.album_title %> ( <%= @product.artist %> )</h1>
	</div>
	<div class="admin-edit-delete-button">
		<%= link_to edit_admins_product_path(@product) do %>
		<button class="admin-edit-button btn-success btn-lg" type="button"><%= @product.album_title %> の登録情報を編集する</button>
		<% end %>
		<%= link_to admins_product_path, method: :delete do %>
		<button class="admin-delete-button btn btn btn-danger btn-lg" type="button"><%= @product.album_title %> を商品一覧から削除</button>
		<% end %>
	</div>
	<div class="admin-product-show-main-box">
		<div class="admin-product-info">
			<p class="admin-subtitles">商品詳細</p>
			<div class="">
				<div class="">
					<%= attachment_image_tag @product, :image, :fill, 60, 60, fallback: 'icon-mypage.jpg', :size => "100x100", class: "admin-product-img" %>
				</div>
				<p><label>タイトル：</label><%= @product.album_title %></p>
				<p><label>アーティスト：</label><%= @product.artist %></p>
				<p><div class="dropdown">
						<button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
							収録曲
							<span class="caret"></span>
						</button>
						<ul class="dropdown-menu" role="menu">
						<% @product.discs.each do |disc| %>
							<li>DISC<%= disc.disc_number %></li>
							<% disc.musics.each_with_index do |music| %>
								<li><%= music.name %><%= music.duration %></li>
							<% end %>
						<% end %>
						</ul>
					</div>
				</p>
				<p><label>価格 ：¥</label><%= @product.price %></p>
				<p><label>リリース年：</label><%= @product.release_year %>年</p>
				<p><label>登録日：</label><%= @product.created_at.strftime('%Y年%m月%d日') %></p>
				<% if @product.created_at.blank? %>
					<p><label>最終編集日：</label>編集履歴はありません</p>
				<% else %>
					<p><label>最終編集日：</label><%= @product.created_at.strftime('%Y年%m月%d日') %></p>
				<% end %>
			</div>
		</div>
		<div class="sub-info">
			<div class="admin-product-show-quantity-box">
				<p class="admin-subtitles">在庫数</p>
				<p><%= @product.stock %></p>
				<p class="admin-subtitles">お気に入り登録数</p>
				<p><%= @product.favorite_count %></p>
			</div>
			<div class="nearest-orders">
				<p class="admin-subtitles">最近のオーダー（直近５件）</p>
				<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>ユーザーID</th>
						<th>オーダーID</th>
						<th>注文日</th>
					</tr>
				</thead>
				<tbody>
					<!-- each start -->
					<% @orders.each do |order| %>
						<tr>
							<%= link_to admins_order_show_path(order) do %>
								<td><%= order.user_id %></td>
								<td><%= order.id %></td>
								<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
							<% end %>
						</tr>
					<% end %>
					<!-- each end -->
				</tbody>
				</table>
				<%= @msg %>
			</div>
		</div>
	</div>
</div>

